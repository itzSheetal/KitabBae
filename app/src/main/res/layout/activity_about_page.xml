<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg1"
    android:orientation="vertical"
    tools:context=".AboutPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:gravity="center_horizontal|center_vertical"

        android:text="Welcome to Kitab-Bae!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    app:cardElevation="15dp"
    android:layout_margin="30dp"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bb_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:elevation="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Hi,there!"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:padding="20dp"
            android:text="You can use this app for Receiving and Donating your unused Books. No money is involved in the process"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/continue_donating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_thambi"
            android:gravity="center"
            android:padding="10dp"
            android:text="Continue Contributing"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/rounded"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>